<p id="notice"><%= notice %></p>

<%= form_tag adventures_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<%= link_to "Advance Search", new_search_path %>

<br>

<h2>Your potential travel buddies are...</h2>

<br>
<br> 

<table>
  <thead>
    <tr>
      <th>Destination</th>
      <th>Time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adventures.each do |adventure| %>
      <tr>
        <td><%= adventure.destination %></td>
        <td><%= adventure.time %></td>
        <td><%= adventure.user.fullname %></td>
        <td><%= link_to 'Show', user_path(adventure.user) %></td>
        <td><%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: adventure.user.id), method: 'post' %></td>
  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

