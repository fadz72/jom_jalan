<p id="notice"><%= notice %></p>


<p>
  <strong>Destination:</strong>
  <%= @adventure.destination %>
</p>

<p>
  <strong>Time:</strong>
  <%= @adventure.time %>
</p>

<p> ------------------------------------------------------------ </p>



<% if @my_adventures %>

  <table>
    <thead>
      <tr>
        <th>Destination</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% @my_adventures.each do |adventure| %>
          <tr>
            <td><%= adventure.destination %></td>
            <td><%= adventure.time %></td>
            <td><%= link_to 'Edit', adventure_path(adventure.user) %></td>
            <td><%= link_to 'Delete', adventure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
  </table>

<% end %> 


<%= link_to 'Edit', edit_adventure_path(@adventure) %> |
<%= link_to 'Delete', @adventure, method: :delete, data: { confirm: 'Are you sure?' } %> 


