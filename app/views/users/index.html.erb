<h1> Buddies </h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Home Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do | user| %>
      <tr>
        <td><%= user.fullname %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><%= user.birthday %></td>
        <td><%= user.home_country %></td>

        <td><%= link_to 'Show', user_path(user.id) %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>