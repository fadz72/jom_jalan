<div class="row">


  <div class="col-md-2">
    <div class="center">
      <%= image_tag avatar_url(@user), class: "avatar-large" %>
    </div>
  </div>

   <div class="form-group">
               <div class="col-sm-offset-2 col-sm-5">
                  <%= link_to "Create Adventure!", new_adventure_path, :class => "btn btn-primary" %>
                </div>
            </div>

<br>
<br>

  <div class="col-md-6 text-center">
    <h2>Edit Profile </h2><br><br>

      <%= form_for(@user) do |f| %>

        <div class="form-group">
          <%= f.label "Name" %>
          <%= f.text_field :fullname, :class => 'form-control', :placeholder => 'Full Name', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label "Gender : " %>
              <%= f.radio_button :gender, "Female" %>
              <%= f.label "Female" %>&nbsp&nbsp
              <%= f.radio_button :gender, "Male" %>
              <%= f.label "Male" %>
        </div>

        <div class="form-group">
          <%= f.label "Birthday : " %>
          <%= date_field(f, :birthday, @user) %>
        </div>

         <div class="form-group">
          <%= f.label "Home Country" %>
          <%= f.text_field :home_country, :class => 'form-control', :placeholder => 'Country of Origin', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label "About Myself" %>
          <%= f.text_area :description, rows: 5, cols: 25, :class => 'form-control', :placeholder => "Write about yourself..." %>
          <div align="right">max. 300 characters</div>
        </div>

        <hr><br>

        <div class="actions">
          <%= f.submit "Save Changes", :class => "btn btn-primary" %>
        </div>
      <% end %>



      <br><hr>
      <h2>Change Password </h2><br>

      <%= form_for(@user) do |f| %>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :placeholder => "New Password (leave blank if you don't want to change it)", :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password", :class => 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Change Password", :class => "btn btn-primary" %>
        </div>
      <% end %>



  </div>
</div>

 